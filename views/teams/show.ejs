<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Team Detail</h1>

    <p>Kit: <%= team.Kit %></p>
    <p>Goalkeeper: <%= team.GK %></p>
    <p>Defense: <%= team.DF %></p>
    <p>Midfield: <%= team.MF %></p>
    <p>Wingers: <%= team.WG %></p>
    <p>Strikers: <%= team.ST %></p>

    <h2>Statistics</h2>
    <ul>
      <% team.statistics.forEach(function(statistics) { %>
      <p>League Position: <%= statistics.leaguePosition %></p>
      <p>Wins: <%= statistics.wins %></p>
      <p>Loses: <%= statistics.loses %></p>
      <% }); %>
    </ul>
    <form action="/teams/<%= team._id %>/statistics" method="post">
      <label>League Position:</label>
      <input type="number" name="leaguePosition" min="1" max="20" />
      <label>Wins:</label>
      <input type="number" name="wins" />
      <label>Loses:</label>
      <input type="number" name="loses" />
      <input type="submit" value="Add Statistics" />
    </form>
  </body>
</html>
